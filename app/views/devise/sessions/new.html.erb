<head>
  <%= stylesheet_link_tag 'users/new', :media => "all" %>
  <%= stylesheet_link_tag 'reset', :media => "all" %>
</head>

<body>
  <div class="screen">
    <div class="main">
      <%= image_tag "top.png", class:"screen-img" %>
      <div class="main-items">
        <div class="app-texts">
          <div class="app-name">
            Cookphelia
          </div>
          <div class="app-text">
            面倒な買い物リスト作成をワンクリックで
          </div>
        </div>
        <div class='account-page' id='account-page'>
          <div class='account-page__inner clearfix'>

            <div class='account-page__inner--left account-page__header'>
              <h2>Log in</h2>
              <h5>登録しているユーザーでログイン</h5>
              <%= link_to "Sign up",  new_user_registration_path, class: 'signup-link'%>
            </div>

            <div class='account-page__inner--right user-form'>
              <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :email%>
                  </div>
                  <div class='field-input'>
                    <%= f.email_field :email, autofocus: true%>
                  </div>
                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :password%>
                    <i>(英数字6文字以上)</i>
                  </div>
                  <div class='field-input'>
                    <%= f.password_field :password, autocomplete: "off"%>
                  </div>
                </div>
                  <div class='actions'>
                    <%= f.submit "Log in", class: 'btn'%>
                  </div>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>