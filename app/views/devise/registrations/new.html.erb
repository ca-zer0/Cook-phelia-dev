<head>
  <%= stylesheet_link_tag 'users/create', :media => "all" %>
  <%= stylesheet_link_tag 'reset', :media => "all" %>
</head>

<body>
<div class="screen">
    <div class="main">
      <%= image_tag "top.png", class:"screen-img" %>
      <div class="main-items">
        <div class="app-texts">
          <div class="app-name">
            Cookphelia
          </div>
          <div class="app-text">
            面倒な買い物リスト作成をワンクリックで
          </div>
        </div>
        <div class='account-page' id='account-page'>
          <div class='account-page__inner clearfix'>
          
            <div class='account-page__inner--left account-page__header'>
              <h2>Create Account</h2>
              <h5>新規アカウントの作成</h5>
            </div>

            <div class='account-page__inner--right user-form'>
              <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
                <%= render "devise/shared/error_messages", model: f.object %>

                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :name%>
                  </div>
                  <div class='field-input'>
                    <%= f.text_field :name, autofocus: true%>
                  </div>
                </div>

                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :email%>
                  </div>
                  <div class='field-input'>
                    <%= f.email_field :email%>
                  </div>
                </div>

                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :password%>
                    <i>(英数字6文字以上)</i>
                  </div>
                  <div class='field-input'>
                    <%= f.password_field :password, autocomplete: "off"%>
                  </div>
                </div>

                <div class='field'>
                  <div class='field-label'>
                    <%= f.label :password_confirmation%>
                  </div>
                  <div class='field-input'>
                    <%= f.password_field :password_confirmation, autocomplete: "off"%>
                  </div>
                </div>

                <div class='actions'>
                  <%= f.submit "Create Account", class: 'btn'%>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>