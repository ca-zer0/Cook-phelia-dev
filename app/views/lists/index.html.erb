<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Recipe ID</th>
      <th>Recipe Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.recipe.id %></td>
        <td><%= list.recipe.name %></td>
        <td>
          <%= link_to 'Show', list %>
          <%= link_to 'Edit', edit_list_path(list) %>
          <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path %>